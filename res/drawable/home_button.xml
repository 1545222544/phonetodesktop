<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/home_button_background" android:state_focused="false" android:state_pressed="false"/>
    <item android:drawable="@drawable/home_button_background" android:state_focused="true" android:state_pressed="false">
        <shape>
            <stroke android:width="1dp" android:color="#ff33b5e5"/>
        </shape>
    </item>
    <item android:drawable="@drawable/home_button_background" android:state_focused="false" android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#ff33b5e5"/>
            <solid android:color="#CCCCCC88"/>
        </shape>
    </item>
    <item android:drawable="@drawable/home_button_background" android:state_focused="true" android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#ff33b5e5"/>
            <solid android:color="#CCCCCC88"/>
        </shape>
    </item>

</selector>